{
    "mirror-region": "China",
    "profile": "kde",
    "timezone": "Asia/Shanghai",
    "audio": "pipewire",
    "nic": {
        "type": "nm",
        "dhcp": true
    },
    "bootloader": "Grub",
    "packages": [
        "base-devel",
        "bash-completion",
        "docker",
        "fcitx5-chinese-addons",
        "fcitx5-gtk",
        "fcitx5-im",
        "fcitx5-qt",
        "firefox",
        "git",
        "vim","man-db",
        "wqy-bitmapfont",
        "wqy-zenhei",
        "open-vm-tools"
    ],
    "services": [
        "docker.service",
        "vmtoolsd.service",
        "vmware-vmblock-fuse.service"
    ],
    "custom-commands": [
        "printf '\nGTK_IM_MODULE=fcitx\nQT_IM_MODULE=fcitx\nXMODIFIERS=@im=fcitx\nSDL_IM_MODULE=fcitx\nGLFW_IM_MODULE=ibus' >> /etc/environment"
    ]
}
